<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:background="#F5F3F2">

    <!-- Main card -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="26dp"
        android:background="@drawable/rounded_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp">

        <!-- Profile image -->
        <ImageView
            android:id="@+id/imgProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_profile_photo"
            android:contentDescription="Profile photo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- User ID -->
        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 123456789"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Dylan"
            android:textSize="17sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- Lastname -->
        <TextView
            android:id="@+id/tvUserLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname: Jafet"
            android:textSize="17sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- Phone -->
        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +506 1234 5678"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: example@mail.com"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- Birthdate -->
        <TextView
            android:id="@+id/tvUserBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthdate: 02/12/2001"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="SIGN OUT"
            android:textSize="17sp"
            android:background="@drawable/rounded_signout_button"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>