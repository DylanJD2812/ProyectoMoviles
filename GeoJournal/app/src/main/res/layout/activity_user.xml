<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:background="#F5F3F2">

    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="26dp"
        android:background="@drawable/rounded_card"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile image -->
        <ImageView
            android:id="@+id/imgProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_profile_photo"
            android:contentDescription="Profile photo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- USER ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER ID"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15sp"
            android:textColor="#444"
            android:layout_marginBottom="16dp"/>

        <!-- NAME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameTxt"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="17sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- LAST NAME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fnameTxt"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="17sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- PHONE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phonetxt"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- EMAIL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailTxt"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"/>

        <!-- BIRTHDATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bdayTxt"
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUserBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Sign Out -->
        <Button
            android:id="@+id/btnSignOut_User"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/log_out"
            android:textSize="17sp"
            android:background="@drawable/rounded_signout_button"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
