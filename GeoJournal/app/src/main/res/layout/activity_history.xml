<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:background="#F5F3F2">

    <!-- Main card -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp">

        <!-- Header question -->
        <TextView
            android:id="@+id/tvPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatâ€™s your memory?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#333"
            android:paddingBottom="12dp"/>

        <!-- Title label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="14sp"
            android:textColor="#666"
            android:paddingTop="8dp"/>

        <!-- Title input -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_input"
            android:hint="Enter title"
            android:paddingHorizontal="14dp"
            android:textColor="#222"
            android:textColorHint="#999"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Description label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#666"
            android:paddingBottom="6dp"/>

        <!-- Description input -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_description"
            android:hint="Write something..."
            android:gravity="top|start"
            android:padding="14dp"
            android:textColor="#222"
            android:textColorHint="#999"
            android:textSize="15sp"
            android:overScrollMode="always"
            android:layout_marginBottom="20dp"/>

        <!-- Upload container -->
        <LinearLayout
            android:id="@+id/uploadBox"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_upload"
            android:padding="14dp">

            <ImageView
                android:id="@+id/ivUploadIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Upload"
                android:src="@android:drawable/ic_menu_upload"
                android:tint="#444" />

            <TextView
                android:id="@+id/tvAddFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add photo or video"
                android:textSize="14sp"
                android:textColor="#444"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Save button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="SAVE"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_save_button"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>