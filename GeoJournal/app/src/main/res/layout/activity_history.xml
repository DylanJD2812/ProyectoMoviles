<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".HistoryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add history"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- History Title Input -->
    <EditText
        android:id="@+id/TitleTxt_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Add history title..."
        android:background="@android:color/transparent"
        android:paddingVertical="8dp"
        android:textSize="16sp"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider Under Title -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/TitleTxt_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Section -->
    <LinearLayout
        android:id="@+id/uploadSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnUpload_history"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_upload_circle"
            android:scaleType="centerInside"
            android:contentDescription="upload_media"
            android:padding="8dp"
            android:focusable="true"
            android:clickable="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add photo or video"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:textColor="#555555" />
    </LinearLayout>

    <!-- Preview Container -->
    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#EEEEEE"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="0dp"
        android:foregroundGravity="top"
        app:layout_constraintTop_toBottomOf="@+id/uploadSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Preview image/video -->
        <ImageView
            android:id="@+id/PreviewPhoto_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Preview" />

        <!-- Clear button -->
        <ImageButton
            android:id="@+id/btnClear_history"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear_circle"
            android:contentDescription="Clear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Comment Box -->
    <EditText
        android:id="@+id/CommentTxt_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Add comment"
        android:paddingTop="24dp"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/previewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/CommentTxt_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button â€” Compact + Centered -->
    <Button
        android:id="@+id/btnSave_history"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Save"
        android:paddingHorizontal="32dp"
        android:backgroundTint="#007AFF"
        android:textColor="@android:color/white"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
